{
  "name": "Smart Git Integration & Optimization Agent",
  "version": "1.0.0",
  "description": "Autonomous background agent to intelligently merge all Git branches, resolve conflicts, optimize the codebase, and produce a unified, stable version automatically every 6 hours.",
  "schedule": {
    "type": "interval",
    "value": "6h",
    "cron": "0 */6 * * *"
  },
  "git": {
    "mainBranch": "main",
    "autoMergeBranch": "auto-merge-main",
    "finalBranch": "final-optimized-version",
    "excludeBranches": [
      "HEAD",
      "main",
      "master",
      "develop",
      "staging"
    ],
    "mergeStrategy": "smart",
    "conflictResolution": {
      "autoResolve": true,
      "rules": [
        "prefer newer logic unless breaking",
        "preserve documentation and comments",
        "if uncertain, merge both sides with clear TODO markers",
        "prefer main branch for critical files (package.json, config files)",
        "keep import statements from both sides when possible"
      ]
    }
  },
  "optimization": {
    "tasks": [
      {
        "name": "Static Analysis",
        "command": "npm run lint --fix",
        "enabled": true,
        "description": "Fix syntax and style issues"
      },
      {
        "name": "Remove Unused Imports",
        "command": "npx eslint . --ext .js,.jsx,.ts,.tsx --fix --rule \"no-unused-vars: error\"",
        "enabled": true,
        "description": "Remove unused imports and variables"
      },
      {
        "name": "Update Dependencies",
        "command": "npm audit fix --force",
        "enabled": true,
        "description": "Update and fix dependencies"
      },
      {
        "name": "Format Code",
        "command": "npx prettier --write .",
        "enabled": true,
        "description": "Format code consistently"
      },
      {
        "name": "Type Check",
        "command": "npx tsc --noEmit",
        "enabled": true,
        "description": "Check TypeScript types"
      },
      {
        "name": "Remove Dead Code",
        "command": "npx ts-unused-exports tsconfig.json",
        "enabled": false,
        "description": "Find and remove unused exports"
      }
    ]
  },
  "testing": {
    "enabled": true,
    "commands": [
      "npm test",
      "npm run test",
      "npm run test:unit",
      "npm run test:integration"
    ],
    "timeout": 300
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "output": "logs/auto_merge.log",
    "rotate": true,
    "maxSize": "10MB",
    "maxFiles": 5
  },
  "reporting": {
    "enabled": true,
    "format": "markdown",
    "output": "reports/smart-integration-report.md",
    "includeMetrics": true,
    "includeBranches": true,
    "includeOptimizations": true
  },
  "notifications": {
    "enabled": false,
    "webhook": "",
    "email": "",
    "slack": ""
  },
  "safety": {
    "backupBeforeMerge": true,
    "maxConflictsPerBranch": 10,
    "skipBranchesWithManyConflicts": true,
    "requireHumanReview": false,
    "dryRun": false
  }
}