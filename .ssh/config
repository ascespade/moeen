# Amazon EC2 Server Configuration
Host amazon-server
    HostName YOUR_EC2_PUBLIC_IP_OR_DOMAIN
    User ubuntu
    IdentityFile ~/.ssh/test_key
    Port 22
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Alternative configuration for different EC2 instances
Host amazon-server-2
    HostName YOUR_OTHER_EC2_IP
    User ec2-user
    IdentityFile ~/.ssh/test_key
    Port 22
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
