# ===========================================
# Moeen Healthcare System - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Mu3een
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_API_TIMEOUT=10000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Alternative: Direct PostgreSQL (if not using Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/moeen_healthcare
POSTGRES_DB=moeen_healthcare
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@moeen.com

# ===========================================
# SMS CONFIGURATION (Optional)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Moyasar (Saudi Arabia)
MOYASAR_SECRET_KEY=sk_test_your_moyasar_secret_key
MOYASAR_PUBLISHABLE_KEY=pk_test_your_moyasar_publishable_key

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
SUPABASE_STORAGE_BUCKET=medical-files

# ===========================================
# CACHING & PERFORMANCE
# ===========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ===========================================
# AI & CHATBOT
# ===========================================
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
NEXT_PUBLIC_ENABLE_AI=true

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# ===========================================
# WEBHOOKS & INTEGRATIONS
# ===========================================
WEBHOOK_SECRET=your_webhook_secret_key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# ===========================================
# SOCIAL MEDIA INTEGRATIONS (Optional)
# ===========================================
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# ===========================================
# WORKFLOW AUTOMATION
# ===========================================
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key

# ===========================================
# SECURITY & RATE LIMITING
# ===========================================
CORS_ORIGIN=http://localhost:3000
TRUSTED_PROXIES=127.0.0.1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
USE_WEB_SERVER=1
MONITOR_INTERVAL=60000
CLEANUP_RETENTION_DAYS=7

# ===========================================
# SAUDI HEALTH INTEGRATIONS
# ===========================================
SAUDI_HEALTH_API_KEY=your_saudi_health_api_key
SAUDI_HEALTH_API_URL=https://api.saudihealth.gov.sa
MINISTRY_HEALTH_API_KEY=your_ministry_health_api_key
MINISTRY_HEALTH_API_URL=https://api.moh.gov.sa

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_CHATBOT=true
ENABLE_APPOINTMENTS=true
ENABLE_INSURANCE=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_SOCIAL_MEDIA=false
ENABLE_AUTOMATION=false

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# ===========================================
# NOTES
# ===========================================
# 1. Never commit this file with real credentials
# 2. Use strong, unique passwords and keys
# 3. Rotate secrets regularly
# 4. Use environment-specific values for production
# 5. Test all integrations before going live
